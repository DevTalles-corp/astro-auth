---
import Navbar from '@/components/shared/Navbar.astro';

interface Props {
  title?: string;
}

const { title = 'Auth Astro App' } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />

    <main class="container m-auto max-w-3xl px-5">
      <slot />
    </main>
  </body>
</html>
